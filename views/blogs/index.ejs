            <div class="tax-toggle">
              <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Dark Mode</label>
              </div>
            </div>
            
          </div>

    <h3 class="d-flex justify-content-center">All Blogs!</h3>
    <form method="GET" action="/blogs/new">
        <!-- <button>New Blog</button> -->
    </form>
    <br>


    <div class="card2">
    <% for(let blog of allBlogs) { %>
   
        <div class="card " style="width: 18rem;">
            <img src="<%= blog.image %>" alt="blogPic"  style="height: 20rem;">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.description %></p>
              <p class="card-text"><%= blog.created_at.toString().split(" ")[4] %></p>
              <p class="card-text"><%= blog.created_at.toString().split(" ").slice(0, 4).join("-") %></p>
              <!-- <a href="#" class="btn btn-primary">Buy Now</a> -->
            </div>
        </div>
        <% } %>
    </div>


    
   

