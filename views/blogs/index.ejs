<% layout("/layouts/boilerplate") %>
<body>
    <h3>All Blogs!</h3>
    <form method="GET" action="/blogs/new">
        <button>New Blog</button>
    </form>
    <br>

    <% for(let blog of allBlogs) { %>
        <div>
            <p>Username: <i><b> <%= blog.username %> </b></i></p>
            <img src="<%= blog.image %>" alt="blogPic">
            <p><h2><%= blog.title %></h2></p> 
            <p><%= blog.description %></p>
            <p><%= blog.created_at.toString().split(" ")[4] %></p>
            <p><%= blog.created_at.toString().split(" ").slice(0, 4).join("-") %></p>
        </div>
        <hr>
        <br><br>
    <% } %>

</body>
