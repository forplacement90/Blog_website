
    


<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2"> 
    <h3 class="d-flex justify-content-center mt-5">Create a New Blog</h3>
    <form method="POST" action="/blogs" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
            <label for="username" class="form-label">Username</label>
          <input name="blog[title]" placeholder="enter title" type="text" class="form-control" required/>
           <div class="valid-feedback">Username looks good!</div>
          </div>

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
      <input name="blog[title]" placeholder="enter title" type="text" class="form-control" required/>
       <div class="valid-feedback">Tittle looks good!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
        name="blog[description]"
        class="form-control" ></textarea>
        <div class="invalid-feedback">Please Enter a description</div>
      </div>
      
      <div class="mb-3">
        <label for="image" class="form-label" class="form-label" >Image Links</label>
        <input
        name="blog[image]"
        placeholder="enter image URL/Link"
        type="text" class="form-control" />
     
      </div>
     
      
      </div>
      <div class="d-flex justify-content-start fn2 ">
        <button class="btn btn-primary w-20 mt-3 mb-5 ">Add</button>
      </div>
      

    </form>
  </div>
</div>

